{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "input-mask-02",
  "title": "Input Mask 2",
  "description": "A time input field with HH:MM:SS mask formatting for precise time entry",
  "dependencies": [
    "use-mask-input"
